<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/table_layout">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_table"
        android:padding="5dp">

        <TextView
            android:layout_span="3"
            android:text="@string/MIDE"
            android:textSize="20sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">
        <TextView
            android:id="@+id/txt_nombre"
            android:layout_span="3"/>

    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="33dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_reloj" />

        <TextView
            android:id="@+id/txt_horario" />

        <TextView
            android:gravity="end"
            android:layout_gravity="end"
            android:text="@string/horario" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_dessub" />

        <TextView
            android:id="@+id/txt_des_sub"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/des_sub" />



    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_desbaj" />

        <TextView
            android:id="@+id/txt_des_baj"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/des_baj" />



    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="16dp"
            app:srcCompat="@mipmap/ic_distancia" />

        <TextView
            android:id="@+id/txt_dist"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/distancia" />


    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="19dp"
            app:srcCompat="@mipmap/ic_circulo" />

        <TextView
            android:id="@+id/txt_tipo" />

        <TextView
            android:layout_gravity="end"
            android:text="@string/tipo_rec" />



    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_height="15dp"
            app:srcCompat="@mipmap/ic_montona" />

        <TextView
            android:id="@+id/txt_nota_sev" />

        <TextView
            android:layout_gravity="end"
            android:text="@string/severidad" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="17dp"
            app:srcCompat="@mipmap/ic_orientation" />

        <TextView
            android:id="@+id/txt_nota_or"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/orientacion" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="9dp"
            android:layout_height="17dp"
            app:srcCompat="@mipmap/ic_pie" />

        <TextView
            android:id="@+id/txt_nota_despl"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/dificultad" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="17dp"
            app:srcCompat="@mipmap/ic_heart" />

        <TextView
            android:id="@+id/txt_nota_esf"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/esfuerzo" />

    </TableRow>

    <TableRow
        android:id="@+id/row_pasos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table" >

        <ImageView
            android:layout_width="4dp"
            android:layout_height="18dp"
            app:srcCompat="@mipmap/ic_alpinista" />

        <TextView
            android:id="@+id/txt_pasos"
            android:text=""/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/pasos_string" />

    </TableRow>

    <TableRow
        android:id="@+id/row_rapel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table" >

        <ImageView
            android:layout_width="9dp"
            android:layout_height="16dp"
            app:srcCompat="@mipmap/ic_flechapabajo" />

        <TextView
            android:id="@+id/txt_rapel"
            android:text="0"/>

        <TextView
            android:layout_gravity=""
            android:text="@string/rapel_string"/>

    </TableRow>

    <TableRow
        android:id="@+id/row_nieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table" >

        <ImageView
            android:layout_width="13dp"
            android:layout_height="21dp"
            app:srcCompat="@mipmap/ic_piolet" />

        <TextView
            android:id="@+id/txt_nieve"/>

        <TextView
            android:layout_gravity="end"
            android:text="@string/nieve_string" />

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <TextView
            android:text="@string/datos_extra"
            android:layout_span="3"/>

    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/border_table">

        <TextView
            android:id="@+id/txt_datos2"
            android:text="Mas Datos adiccionales"
            android:layout_span="3"/>

    </TableRow>

</TableLayout>